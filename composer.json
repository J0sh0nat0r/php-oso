{
  "name": "j0sh0nat0r/oso",
  "type": "library",
  "description": "A PHP library for interacting with the Oso authorization library.",
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "J0sh0nat0r\\Oso\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "J0sh0nat0r\\Oso\\Tests\\": "tests/"
    }
  },
  "authors": [
    {
      "name": "J0sh0nat0r",
      "email": "jojo.parillon@gmail.com"
    }
  ],
  "require": {
    "php": ">=8.1",
    "ext-ffi": "*",
    "ext-json": "*"
  },
  "require-dev": {
    "jetbrains/phpstorm-attributes": "^1.0",
    "pestphp/pest": "^1.21",
    "pestphp/pest-plugin-mock": "^1.0",
    "phpstan/phpstan": "^1.5"
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  },
  "scripts": {
    "test": "vendor/bin/pest",
    "test-coverage": "vendor/bin/pest --coverage"
  }
}
